<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, required: true %>
  </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class: "bg-blue-500 text-white px-4 py-2 rounded" %>
  </div>
<% end %>

<%= render "devise/shared/error_messages", resource: resource %>

<p>Don't have an account? <%= link_to "Sign up", new_user_registration_path %></p>
<p><%= link_to "Forgot your password?", new_user_password_path %></p>
