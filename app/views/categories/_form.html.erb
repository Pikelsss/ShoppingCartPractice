<%= form_with(model: category, local: true) do |form| %>
  <% if category.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
      <h2 class="font-bold"><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>
      <ul class="list-disc list-inside">
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :name, "Category Name", class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_field :name, class: "mt-1 block w-full border border-gray-300 rounded-lg shadow-sm focus:ring focus:ring-blue-500 focus:outline-none" %>
  </div>

  <div class="mb-4">
    <%= form.label :description, "Description", class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_area :description, class: "mt-1 block w-full border border-gray-300 rounded-lg shadow-sm focus:ring focus:ring-blue-500 focus:outline-none" %>
  </div>

  <div class="mb-4">
    <%= form.label :note, "Additional Notes", class: "block text-gray-700 font-bold mb-2" %>
    <%= form.text_area :note, placeholder: "Provide details about this category...", class: "mt-1 block w-full border border-gray-300 rounded-lg shadow-sm focus:ring focus:ring-blue-500 focus:outline-none" %>
  </div>

  <div>
    <%= form.submit "Save Category", class: "flex items-center justify-center bg-gradient-to-r from-blue-500 to-blue-700 text-white px-6 py-2 rounded-lg text-sm font-medium shadow-md hover:shadow-lg transition-all transform hover:scale-105 focus:ring-2 focus:ring-blue-300" %>
  </div>
<% end %>
