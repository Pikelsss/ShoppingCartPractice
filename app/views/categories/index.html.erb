<div class="max-w-7xl mx-auto px-6 py-12">
  <div class="flex flex-col md:flex-row justify-between items-center mb-10 border-b pb-6">
    <h1 class="text-5xl font-extrabold text-gray-900 dark:text-white flex items-center tracking-tight">
      📂 Explore Categories
    </h1>
    <%= link_to "➕ New Category", new_category_path, 
      class: "bg-gradient-to-r from-blue-500 to-blue-700 text-white px-6 py-3 rounded-full font-semibold shadow-lg 
              hover:shadow-xl transition-all transform hover:scale-105 mt-4 md:mt-0 focus:ring-4 focus:ring-blue-300" %>
  </div>

  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-10">
    <% @categories.each do |category| %>
      <div class="relative bg-white dark:bg-gray-800 shadow-md rounded-xl p-6 border border-gray-200 dark:border-gray-700 
                  group transform transition-all hover:shadow-xl hover:-translate-y-2">
        
        <div class="absolute top-4 right-4 bg-blue-600 text-white text-xs px-3 py-1 rounded-full shadow-md">
          <%= category.products.count %> Products
        </div>

        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-3">
          <%= link_to category.name, category_path(category), 
            class: "hover:text-blue-600 dark:hover:text-blue-400 transition-all duration-300" %>
        </h2>

        <% if category.description.present? %>
          <p class="text-gray-600 dark:text-gray-300 text-sm mb-4 leading-relaxed"><%= category.description %></p>
        <% end %>

        <div class="flex justify-between items-center mt-6">
          <div class="flex space-x-2">
            <%= link_to "✏️ Edit", edit_category_path(category), 
              class: "flex items-center gap-2 bg-gradient-to-r from-blue-500 to-blue-700 text-white px-4 py-2 rounded-lg text-sm 
                      font-medium shadow-md hover:shadow-lg transition-all transform hover:scale-105 focus:ring-2 focus:ring-blue-300" %>

            <%= button_to "🗑️ Delete", category_path(category), method: :delete, 
              data: { confirm: "Are you sure you want to delete this category?" }, 
              class: "flex items-center gap-2 bg-gradient-to-r from-blue-500 to-blue-700 text-white px-4 py-2 rounded-lg text-sm 
                      font-medium shadow-md hover:shadow-lg transition-all transform hover:scale-105 focus:ring-2 focus:ring-blue-300" %>
          </div>

          <%= link_to "🛒 Browse Products", products_path, 
            class: "flex items-center gap-2 bg-gradient-to-r from-blue-500 to-blue-700 text-white px-4 py-2 rounded-lg text-sm 
                    font-medium shadow-md hover:shadow-lg transition-all transform hover:scale-105 focus:ring-2 focus:ring-blue-300" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
